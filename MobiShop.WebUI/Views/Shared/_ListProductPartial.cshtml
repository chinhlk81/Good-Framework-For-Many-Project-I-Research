@using MobiShop.WebUI.Infrastructure
@using MobiShop.Common.Tools
@model MobiShop.WebUI.Models.DisplayListProductViewModel

@Html.Partial("_TitleBar", Model.DisplayName)
@foreach (var product in Model.Entities)
{
    string url = Url.Action("Details", "Product", new { product.Id, ProductNameUnsign = product.NameUnsign });
    <div class="prod_box">
        <div class="top_prod_box"></div>
        <div class="center_prod_box">
          <div class="product_title">
              <a href="@url">@product.Name</a>
          </div>
          <div class="product_img">
              <a href="@url">
                  <img src="@Url.Content("~/Images/" + AppSettings.ThumbPrefix + product.Image)" alt="" border="0" />
              </a>
          </div>
          <div class="prod_price"> <span class="price">@StringTools.PriceString(product.Price)</span></div>
        </div>
        <div class="bottom_prod_box"></div>
        <div class="prod_details_tab">
        	<a href="details.html" class="prod_details" style="background: url(~/Images/square-blue-add.gif) no-repeat left;">Chi ti?t</a> 
        	<a href="details.html" class="prod_details">Thêm </a> 
        </div>
    </div>
}
     