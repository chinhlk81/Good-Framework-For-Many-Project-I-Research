@using MobiShop.Common.Tools
@using MobiShop.WebUI.Infrastructure
@model MobiShop.Core.Model.Product

<div id="header">
    <div id="logo"> 
        <img src="~/Images/logo.png" alt="" border="0" width="237" height="140" />
    </div>
    <div class="oferte_content">
      <div class="top_divider"><img src="~/Images/header_divider.png" alt="" width="1" height="164" /></div>
      <div class="oferta">
          @if(Model != null)
          {
            <div class="oferta_content"> 
                <img src="@Url.Content("~/Images/" + AppSettings.ThumbPrefix + Model.Image)" width="94" height="92" alt="" border="0" class="oferta_img" />
              <div class="oferta_details">
                <div class="oferta_title">@Model.Name</div>
                <div class="oferta_text">@StringTools.TrimString(Model.Description, AppSettings.MaxHeaderDescriptionLength)</div>
                  @Html.ActionLink("Details", "Details", "Product", new { Model.Id, ProductNameUnsign = Model.NameUnsign }, new { @class="details" })
               </div>
            </div>
          }
      <div class="top_divider"><img src="~/Images/header_divider.png" alt="" width="1" height="164" /></div>
    </div>
    <!-- end of oferte_content-->
  </div>
</div>